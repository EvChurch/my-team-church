<div class="row">
  <div class="col-md-4">
    <div class="list-group">
      <% department.sub_departments.each do |sub_department| %>
      <a href="<%=  department_sub_department_path(department, sub_department) %>" class="list-group-item justify-content-between">
        <%= sub_department.name %>
        <span class="badge badge-default badge-pill"><%= sub_department.positions.count %></span>
      </a>
      <% end %>
    </div>
  </div>
  <div class="col-md-8">
    <ul class="nav nav-tabs" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" data-toggle="tab" href="#objectives" role="tab">Objectives</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#files" role="tab">Files</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#details" role="tab">Details</a>
      </li>
    </ul>
    <br>
    <div class="tab-content">
      <div class="tab-pane active" id="objectives" role="tabpanel">
        <%= render partial: '/objectives/list', locals: { objectives: department.objectives, resource: department } %>
      </div>
      <div class="tab-pane" id="files" role="tabpanel">
      </div>
      <div class="tab-pane" id="details" role="tabpanel">
      </div>
    </div>
  </div>
</div>
