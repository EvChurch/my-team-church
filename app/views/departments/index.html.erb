<div class="row">
  <div class="col-md-4">
    <div class="list-group">
    <% departments.each do |department| %>
      <a href="<%= department_path(department) %>" class="list-group-item justify-content-between">
        <%= department.name %>
        <span class="badge badge-default badge-pill"><%= department.sub_departments.count %></span>
      </a>
    <% end %>
    </div>
  </div>
</div>
