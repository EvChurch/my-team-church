    <div class="card">
      <div class="card-body p-5">
        <h4 class="card-title"><%= t('.sign_in', default: 'Sign In') %></h4>
        <div class="card-text">
          <%= bootstrap_devise_error_messages! %>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: 'form' }) do |f| %>
          <%= f.input :email, autofocus: true, class: 'form-control' %>
          <%= f.input :password, class: 'form-control' %>
          <% if devise_mapping.recoverable? %>
          <div class="pull-right">
            <%= link_to t('.forgot_your_password', default: 'Forgot your password?'), new_password_path(resource_name) %>
          </div>
          <% end %>
          <% if devise_mapping.rememberable? %>
            <div class="form-group">
              <%= f.check_box :remember_me, class: 'filled-in' %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
          <%= f.submit  t('.sign_in', default: 'Sign in'), class: 'btn btn-block btn-primary' %>
          <% end %>
        </div>
      </div>
      <div class="card-footer">
        <%= render 'devise/shared/links' %>
      </div>
    </div>
  </div>
</section>
