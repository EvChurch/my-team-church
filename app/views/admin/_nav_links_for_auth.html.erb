<% if user_signed_in? %>
  <li class="nav-item <%= 'active' if request.path === edit_profile_path %>">
    <a class="nav-link" href="<%= edit_profile_path %>">
      <%= icon 'user' %>
      My Profile
    </a>
  </li>
  <li class="nav-item <%= 'active' if request.path === edit_organization_path %>">
    <a class="nav-link" href="<%= edit_organization_path %>">
      <%= icon 'cog' %>
      Settings
    </a>
  </li>
  <li class='nav-item'><%= link_to 'Sign out', destroy_user_session_path, class: 'nav-link', method: :delete %></li>
<% else %>
  <li class='nav-item'><%= link_to 'Sign in', user_session_url(subdomain: 'admin'), class: 'nav-link' %></li>
  <li class='nav-item'><%= link_to 'Get Started', new_user_registration_url(subdomain: 'admin'), class: 'nav-link' %></li>
<% end %>
