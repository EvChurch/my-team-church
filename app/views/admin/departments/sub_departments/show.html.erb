<div class="row">
  <div class="col-md-4">
    <div class="list-group">
    <% sub_department.positions.each do |position| %>
      <a href="<%=  department_sub_department_position_path(department, sub_department, position) %>" class="list-group-item justify-content-between">
        <%= position.name %>
        <span class="badge badge-default badge-pill"><%= position.people.count %></span>
      </a>
    <% end %>
    </div>
  </div>
  <div class="col-md-8">
    <ul class="nav nav-tabs" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" data-toggle="tab" href="#goals" role="tab">Goals</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#files" role="tab">Files</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#details" role="tab">Details</a>
      </li>
    </ul>
    <br>
    <div class="tab-content">
      <div class="tab-pane active" id="goals" role="tabpanel">
        <%#= render partial: '/goals/list', locals: { goals: sub_department.goals, resource: sub_department } %>
      </div>
      <div class="tab-pane" id="files" role="tabpanel">
      </div>
      <div class="tab-pane" id="details" role="tabpanel">
      </div>
    </div>
  </div>
</div>
